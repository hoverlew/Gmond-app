.swiper-search{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  min-height:140rpx;
  border-bottom:1px solid #eee;
  background-color:#ffffff;
}
.search{
  width:80%;
}
.searchicon {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left:95rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}
.search-arr {
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
}
.search-arr input{
  margin-left: 80rpx;
  height: 60rpx; 
  font-size:30rpx;
  border-radius: 5px;
}