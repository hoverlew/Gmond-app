/* pages/categorys/searchResult/searchResult.wxss */
.swiper-search{
  display: flex;
  flex-direction: row;
  height: 100%;
  justify-content: center;
  align-items: center;
  width: 100%;
  min-height:140rpx;
  border-bottom:1px solid #eee;
}
.search{ 
  display:flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.search-arr{
  width:80%;
  display:flex;
  flex-direction: row;
}
.search-arr input{
  width:550rpx;
  height: 60rpx; 
  font-size:30rpx;
  border-radius: 5px;
  border: 1px solid #d0d0d0;
  padding-left:20rpx;
}
.search-arr button::after{
border: none;
}
.search-arr button{
  margin-left: 50rpx;
  margin-top:1rpx;
  height: 60rpx;
  line-height:60rpx;
  color:#FFFFFF; 
  font-size:30rpx;
  border-radius: 5px;
  background-color:#f6827a;
  width:150rpx;
  border:1rpx #f6827a solid;
}
.search-history{
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.history-box{
  width:80%;
  display: flex;
  flex-direction: column;
  font-size:30rpx;
}
.history-up{
  margin-top:30rpx;
}
.history-up .history-title{
  float: left;
}
.history-up .history-delete{
  float:right;
}
.history-dn{
  margin-top:30rpx;
  font-size:24rpx;
  color:#666666;
}
.history-dn text{
  padding:10rpx;
  margin:20rpx 20rpx 0 0;
  letter-spacing: 1rpx;
  background-color:#dddddd;
  color:#666666;
  border-radius: 5rpx;
  display:inline-block;
  text-align:center;
}