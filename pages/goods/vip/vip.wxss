/* pages/vip/vip.wxss */
.body{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.search-box{
  display:flex;
  flex-direction: row;
  width:100%;
  height:120rpx;
  margin:100rpx;
  justify-content: center;
  align-items: center;
}
.search-box icon{
  position:relative;
  top:0;
  left:30rpx;
}
.search-box input{
  width:500rpx;
  height:90rpx;
  border:1rpx solid #eeeeee;
  padding-left:80rpx;
  font-size:30rpx;
  color:#dddddd;
  margin-left:-30rpx;
}
.enter-box button{
  width:300rpx;
  height:90rpx;
  background-color:#f6827a;
  color:#ffffff;
  border:none;
  line-height:90rpx;
  font-size:30rpx;
  letter-spacing: 1rpx;
}